rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 최고관리자 확인 함수
    function isAdmin() {
      return request.auth != null && (
        // 하드코딩된 최고관리자 이메일
        request.auth.token.email in ['yj63486202@gmail.com'] ||
        // Firestore의 users 컬렉션에서 isAdmin 필드 확인
        // (get()을 사용하여 현재 사용자의 문서를 읽고 isAdmin 필드 확인)
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true
      );
    }
    
    // 사용자는 자신의 정보만 읽고 쓸 수 있음 (관리자는 모든 사용자 정보 접근 가능)
    // 이메일로 사용자 조회는 로그인 전에도 허용 (로그인 플로우를 위해)
    // 단, 쿼리는 이메일 필드로만 가능하도록 제한
    match /users/{userId} {
      // 개별 문서 읽기: 자신의 정보 또는 관리자
      allow get: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
      // 쿼리 읽기: 이메일로 사용자 조회 허용 (로그인 플로우를 위해)
      // 주의: Firestore 규칙에서는 쿼리 조건을 직접 확인할 수 없으므로,
      // 이메일로만 조회하도록 클라이언트 코드에서 제한해야 함
      allow list: if true;
      // 쓰기: 자신의 문서 생성/업데이트 또는 관리자
      // create: 자신의 문서를 생성할 수 있음 (비밀번호 설정 시)
      allow create: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
      // update: 자신의 문서를 업데이트할 수 있음
      allow update: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
      // delete: 관리자 또는 자신의 이메일과 일치하는 문서 삭제 가능
      // (관리자가 추가한 회원의 기존 문서를 삭제하기 위해)
      allow delete: if isAdmin() || 
        (request.auth != null && 
         resource.data.email == request.auth.token.email);
    }
    
    // 제품은 모든 사용자가 읽을 수 있고, 최고관리자만 작성 가능
    match /products/{productId} {
      allow read: if true; // 비로그인 사용자도 읽기 가능
      allow create: if isAdmin(); // 최고관리자만 생성 가능
      allow update: if request.auth != null && 
        (resource.data.createdBy == request.auth.uid || isAdmin());
      allow delete: if request.auth != null && 
        (resource.data.createdBy == request.auth.uid || isAdmin());
    }
    
    // 주문은 자신의 주문만 읽을 수 있고, 인증된 사용자만 작성 가능 (관리자는 모든 주문 접근 가능)
    match /orders/{orderId} {
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if request.auth != null;
      allow update: if isAdmin(); // 관리자만 수정 가능
      allow delete: if isAdmin(); // 관리자만 삭제 가능
    }
    
    match /productInfoTemplates/{templateId} {
      allow read: if request.auth != null;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // 사이트 설정 규칙
    match /siteSettings/{settingsId} {
      allow read: if true; // 모든 사용자가 읽을 수 있음 (공개 정보)
      allow create, update, delete: if isAdmin(); // 관리자만 생성, 수정, 삭제 가능
    }
  }
}

