rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 관리자 이메일 목록
    function isAdmin() {
      return request.auth != null && 
        request.auth.token.email in ['yj63486202@gmail.com'];
    }
    
    // 사용자는 자신의 정보만 읽고 쓸 수 있음 (관리자는 모든 사용자 정보 접근 가능)
    match /users/{userId} {
      allow read: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
    }
    
    // 제품은 모든 사용자가 읽을 수 있고, 인증된 사용자만 작성 가능 (관리자는 삭제 가능)
    match /products/{productId} {
      allow read: if true; // 비로그인 사용자도 읽기 가능
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        (resource.data.createdBy == request.auth.uid || isAdmin());
      allow delete: if request.auth != null && 
        (resource.data.createdBy == request.auth.uid || isAdmin());
    }
    
    // 주문은 자신의 주문만 읽을 수 있고, 인증된 사용자만 작성 가능 (관리자는 모든 주문 접근 가능)
    match /orders/{orderId} {
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if request.auth != null;
      allow update: if isAdmin(); // 관리자만 수정 가능
      allow delete: if isAdmin(); // 관리자만 삭제 가능
    }
    
    match /productInfoTemplates/{templateId} {
      allow read: if request.auth != null;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // 사이트 설정 규칙
    match /siteSettings/{settingsId} {
      allow read: if true; // 모든 사용자가 읽을 수 있음 (공개 정보)
      allow create, update, delete: if isAdmin(); // 관리자만 생성, 수정, 삭제 가능
    }
  }
}

